#!groovy

properties([
        [
                $class: 'GithubProjectProperty',
                displayName: 'CET Civil Enforcement Online Application',
                projectUrlStr: 'https://github.com/hmcts/cet-online-application'
        ],
//    parameters(),
        pipelineTriggers([
                [$class: 'GitHubPushTrigger']
        ])
])

@Library("Infrastructure")

def type = "java"
def product = "cet"
def component = "online-app"

def channel = '#cet-pipeline'

List<LinkedHashMap<String, Object>> secrets = [
        secret('cet-s2s-token', 'S2S_TOKEN')
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [ $class: 'AzureKeyVaultSecret',
      secretType: 'Secret',
      name: secretName,
      version: '',
      envVariable: envVar
    ]
}

withPipeline(type , product, component) {
    enableSlackNotifications(channel)
    enableDbMigration()
    loadVaultSecrets(secrets)
    before('buildinfra:sprod') {
        return
    }
}
